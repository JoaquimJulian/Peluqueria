<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="application.controllers.EstadisticasController" prefWidth="1366" prefHeight="768">

    <!-- Header -->
    <top>
        <HBox spacing="20" style="-fx-padding: 15px; -fx-background-color: #f4f4f4; -fx-alignment: center-left;">
            <ImageView fx:id="salir" fitHeight="32" fitWidth="32" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="calendario" fitHeight="32" fitWidth="32" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="ajustes" fitHeight="32" fitWidth="32" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="cobrar" fitHeight="32" fitWidth="32" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="usuarios" fitHeight="32" fitWidth="32" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="nombreSesion" text="Nombre Sesión" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Button fx:id="cerrar" text="Cerrar" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-padding: 10px;" />
        </HBox>
    </top>

    <!-- Contenido principal -->
    <center>
        <VBox spacing="30" style="-fx-padding: 20px; -fx-alignment: top-center;">
            <!-- Información del trabajador -->
            <Label fx:id="nombreTrabajador" text="Nombre del Trabajador"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />
            <Label fx:id="registrosFacturacion" text="Registros en Facturación: 0"
                   style="-fx-font-size: 20px;" />

            <!-- Tabla de registros -->
            <TableView fx:id="tablaRegistros" prefHeight="600" prefWidth="1300">
                <columns>
                    <TableColumn fx:id="colFacturaId" text="ID Factura" prefWidth="100" />
                    <TableColumn fx:id="colCliente" text="Cliente" prefWidth="250" />
                    <TableColumn fx:id="colTrabajador" text="Trabajador" prefWidth="250" />
                    <TableColumn fx:id="colMontoTotal" text="Monto Total" prefWidth="150" />
                    <TableColumn fx:id="colMetodoPago" text="Método de Pago" prefWidth="150" />
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="150" />
                    <TableColumn fx:id="colComentario" text="Comentario" prefWidth="250" />
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
